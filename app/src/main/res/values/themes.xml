<resources>
    <!-- Base application theme. -->
    <style name="Theme.Strava" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tangelo</item>
        <item name="colorPrimaryVariant">@color/tangelo_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tangelo</item>
        <item name="colorSecondaryVariant">@color/tangelo_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="getStartedButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/get_started_text_size</item>

        <item name="android:background">@drawable/button_background</item>

        <item name="android:layout_marginBottom">@dimen/huge_margin</item>
        <item name="android:layout_marginStart">@dimen/huge_margin</item>
        <item name="android:layout_marginEnd">@dimen/huge_margin</item>
    </style>

    <style name="authTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
        <item name="android:layout_marginBottom">@dimen/big_margin</item>
        <item name="boxStrokeErrorColor">@color/red_800</item>
        <item name="errorIconTint">@color/red_800</item>
        <item name="errorTextColor">@color/red_800</item>
    </style>

    <style name="DotsIndicator">
        <item name="dotsColor">@color/tangelo_light</item>
        <item name="selectedDotColor">@color/tangelo</item>
    </style>

    <style name="DotsIndicatorLand">
        <item name="dotsColor">?attr/colorOnPrimary</item>
        <item name="selectedDotColor">@color/tangelo</item>
    </style>

</resources>